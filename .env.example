# Database
DATABASE_URL=postgresql://receipts:receipts@postgres:5432/receipts

# Redis
REDIS_URL=redis://redis:6379/0

# Gmail API (file-based fallback — used when no DB connection exists)
GMAIL_CREDENTIALS_FILE=/secrets/credentials.json
GMAIL_TOKEN_FILE=/secrets/token.json
GMAIL_POLL_INTERVAL_SECONDS=300

# Google Drive
DRIVE_ROOT_FOLDER=Receipts

# Google OAuth (required for the web-based connect flow at /auth/google/*)
# Create OAuth 2.0 Web Application credentials in Google Cloud Console
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Security — change this to a strong random value in production
APP_SECRET_KEY=change-me-in-production

# Processing
CONFIDENCE_THRESHOLD=0.75
MAX_ATTACHMENT_SIZE_MB=25

# Retention
RETENTION_DAYS_PROCESSED=45
RETENTION_DAYS_REVIEW=90
